default menu.c32
prompt 0
timeout 101
ONTIMEOUT local

menu title ########## PXE Boot Menu ##########

LABEL local
        MENU LABEL boot local hard drive
        LOCALBOOT 0
LABEL 1
        MENU LABEL 1^) OCP4 bootstrap
        KERNEL http://{{ dhcpiprange }}.10:8080/tftp/rhcos/rhcos-installer-kernel-x86_64
        APPEND ip=dhcp rd.neednet=1 initrd=http://{{ dhcpiprange }}.10:8080/tftp/rhcos/rhcos-installer-initramfs.x86_64.img coreos.inst=yes coreos.inst.install_dev=sda coreos.inst.image_url=http://{{ dhcpiprange }}.10:8080/tftp/rhcos/rhcos-metal.x86_64.raw.gz coreos.inst.ignition_url=http://{{ dhcpiprange }}.10:8080/ocp-installer/cluster/bootstrap.ign

